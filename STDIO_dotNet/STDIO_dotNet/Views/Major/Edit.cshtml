@model Major
     
<form asp-action="SubmitEdit" asp-controller="Major" method="post">      
          <div class="form-group row">
            <label for="ClassID" class="col-sm-2 col-form-label">ID</label>
            <div class="col-sm-10">
              <input type="text"  class="form-control" asp-for="@Model.ClassID" name="ClassID" readonly>
            </div>
          </div>
          <div class="form-group row">
            <label for="MajorName" class="col-sm-2 col-form-label">Tên chuyên ngành</label>
            <div class="col-sm-10">
              <input type="text" class="form-control" name="MajorName" asp-for="@Model.MajorName" required>
            </div>
          </div>
          <div class="form-group row">
            <label for="MajorID" class="col-sm-2 col-form-label">Viết tắt</label>
            <div class="col-sm-10">
              <input type="text" class="form-control" name="MajorID" asp-for="@Model.MajorID" required>
            </div>
          </div>
          
          
        <button type="submit" class="btn btn-primary">Save changes</button>
</form>